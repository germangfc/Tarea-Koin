CREATE TABLE IF NOT EXISTS Estudiantes (
    id INTEGER PRIMARY KEY,
    nombre TEXT NOT NULL,
    calificacion REAL NOT NULL,
    created_at TEXT NOT NULL,
    updated_at TEXT NOT NULL,
    is_deleted INTEGER NOT NULL DEFAULT 0
);

